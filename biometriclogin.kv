BoxLayout:
    orientation: 'vertical'

    ActionBar:
        size: root.width, 50

        ActionView:
            use_separator: True

            ActionPrevious:
                title: 'Biometric Login Sample'
                with_previous: False

    ScreenManager:
        id: screen_manager

        Screen:
            name: "login"

            BoxLayout:
                id: layout_login
                orientation: 'vertical'
                padding: '50dp'

                Label:
                    text: 'Biometric Login Sample'
                    font_size: 24
    
                BoxLayout:
                    id: layout_center_login
                    orientation: 'vertical'

                    Label:
                        text: 'Phone number, email or username'
                        text_size: layout_center_login.width, None
                        size: self.texture_size

                    TextInput:
                        multiline: False
                        focus: True

                    Label:
                        text: 'Password'
                        text_size: layout_center_login.width, None
                        size: self.texture_size

                    TextInput:
                        multiline: False
                        focus: True

                    Widget:

                    Button:
                        text: 'LOGIN'

                    Label:
                        markup: True
                        text: 'Use biometrics'
                        color: 0.2, 0.6, 1, 1
                        text_size: layout_center_login.width, None
                        size: self.texture_size
                        on_touch_down: print("Hola mundo")

                Widget:

