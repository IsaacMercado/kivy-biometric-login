<LoginScreen>:
    biometric_label: biometric_label

    BoxLayout:
        id: layout_login
        orientation: 'vertical'
        padding: '50dp'

        Label:
            text: 'Biometric Login Sample'
            font_size: 24

        BoxLayout:
            id: layout_center_login
            orientation: 'vertical'

            Label:
                text: 'Phone number, email or username'
                text_size: layout_center_login.width, None
                size: self.texture_size

            TextInput:
                multiline: False
                focus: True

            Label:
                text: 'Password'
                text_size: layout_center_login.width, None
                size: self.texture_size

            TextInput:
                multiline: False
                focus: True
                password: True

            Widget:

            Button:
                text: 'LOGIN'
                on_press: root.login()

            Label:
                id: biometric_label
                markup: True
                text: '[ref=biometrics]Use biometrics[/ref]'
                color: 0.2, 0.6, 1, 1
                text_size: layout_center_login.width, None
                size: self.texture_size

        Widget:


<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '50dp'

        Widget:

        Button:
            text: 'LOGOUT'
            size_hint_y: 0.1
            on_press: root.logout()

        Widget:


BoxLayout:
    orientation: 'vertical'

    ActionBar:
        size: root.width, 50

        ActionView:
            use_separator: True

            ActionPrevious:
                title: 'Biometric Login Sample'
                with_previous: False

    ScreenManager:
        id: screen_manager

        LoginScreen:
            name: "login"

        MainScreen:
            name: "main"
